version: "0.1"

# Mount additional libraries and modules
mounts:
  # Example: Mount BMAD method library
  - mount: "/modules/bmad/"
    url: "https://raw.githubusercontent.com/bmadcode/bmad-method/main/"
  
  # Example: Mount a shared skill library
  - mount: "/lib/common/"
    url: "https://raw.githubusercontent.com/ShipFail/promptware/main/os/skills/"

# Notes:
# - OS fstab (at OS root) is processed before os_chroot()
# - Application fstab (at application root) is processed after os_chroot()
# - Mount conflicts cause kernel panic
# - All URLs must be HTTPS GitHub raw URLs ending with /
